#!/bin/bash

# options to be displayed
option0="Lock"
option1="Reboot"
option2="Shutdown"
option3="Logout"
option4="Suspend"
option5="Scheduled suspend (10min)"

# options passed into variable
options="\uf023 $option0\n\u21bb $option1\n\uf011 $option2\n\uf842 $option3\n\uf9b1 $option4\n\uf9b1 $option5"

chosen="$(echo -e "$options" | rofi -lines 8 -dmenu -p "power" -font 'FiraCode Nerd Font 15')"
chosen=${chosen:2}
echo $chosen
case $chosen in
    $option0)
        slock;;
    $option1)
        systemctl reboot;;
    $option2)
        systemctl poweroff;;
	$option3)
        #loginctl terminate-session ${XDG_SESSION_ID-};;
        i3-msg exit;;
    $option4)
        systemctl suspend;;
	$option5)
		sleep 600 && systemctl suspend;;
esac
