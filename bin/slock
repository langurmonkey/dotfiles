#!/usr/bin/env bash

cd "$(dirname "$0")" || exit

# Take screenshot.
grim -t png ~/Pictures/lockscreen.png
# Remove blurred if it exists.
rm ~/Pictures/lockscreen-blur.png
# Blur screenshot.
magick ~/Pictures/lockscreen.png -blur 0x6 ~/Pictures/lockscreen-blur.png
# Some colors.
background='#1d1f21'
color1='#CC342B'
color2='#198844'
color3='#FBA922'
color4='#A36AC7'

# Lock with blurred image.
swaylock \
  --indicator-radius 160 \
  --indicator-thickness 20 \
  --inside-color 00000000 \
  --inside-clear-color 00000000 \
  --inside-ver-color 00000000 \
  --inside-wrong-color 00000000 \
  --key-hl-color "$color1" \
  --bs-hl-color "$color2" \
  --ring-color "$background" \
  --ring-clear-color "$color2" \
  --ring-wrong-color "$color4" \
  --ring-ver-color "$color3" \
  --line-uses-ring \
  --line-color 00000000 \
  --font 'Hack:style=Regular 40' \
  --text-color 00000000 \
  --text-clear-color 00000000 \
  --text-wrong-color 00000000 \
  --text-ver-color 00000000 \
  --separator-color 00000000 \
  --image "$HOME/Pictures/lockscreen-blur.png" \
  --daemonize

# Clean up.
rm ~/Pictures/lockscreen-blur.png
rm ~/Pictures/lockscreen.png
