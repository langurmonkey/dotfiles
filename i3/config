# STARTUP APPLICATIONS
#

# Repeat interval and delay
exec_always --no-startup-id xset r rate 200 45 # initial delay 200 ms, with a rate of 45 repeats per second

# Keyboard layout definition. Switch escape and caps lock key
exec_always --no-startup-id setxkbmap -model pc104 -layout us,es -option 'grp:alt_space_toggle,caps:swapescape,eurosign:e'

# Activate numlock
exec_always --no-startup-id numlockx

